{
    "version": 1,
    "builds": [
        {
            "src": "**",
            "use": "@vercel/node"
        },
        {
            "src": "views/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm run build",
                "outputDirectory": "views/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "./app.js"
        },
        {
            "src": "/(.*)",
            "dest": "views/build/index.html"
        }
    ]
}